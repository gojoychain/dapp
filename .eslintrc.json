{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        { "max": 1, "maxEOF": 0 }
      ],
      "max-len": [
        "error", { "code": 140 }
      ],
      "no-underscore-dangle": [
        "error",
        { "allow": ["_address"] }
      ],
      "import/prefer-default-export": [
        "warn"
      ],
      "react/jsx-filename-extension": [
        1,
        { "extensions": [".js", ".jsx"] }
      ],
      "react/jsx-one-expression-per-line": 0,
      "react/prop-types": 0
    }
}
